{
  "env": {
    "jasmine": true
  },
  "extends": ["@wireapp/eslint-config", "plugin:jasmine/recommended"],
  "globals": {
    "$": true,
    "_": true,
    "adapter": true,
    "amplify": true,
    "bazinga64": true,
    "cryptobox": true,
    "Dexie": true,
    "DexieBatch": true,
    "hljs": true,
    "jQuery": true,
    "keyboardJS": true,
    "ko": true,
    "linkify": true,
    "linkifyHtml": true,
    "Long": true,
    "LRUCache": true,
    "marked": true,
    "PhoneFormat": true,
    "platform": true,
    "poster": true,
    "Raygun": true,
    "sinon": true,
    "StoreEngine": true,
    "TestFactory": true,
    "UUID": true,
    "wire": true,
    "z": true
  },
  "plugins": ["jasmine"],
  "rules": {
    "id-length": "off",
    "jasmine/no-expect-in-setup-teardown": "off",
    "jasmine/no-spec-dupes": "off",
    "jasmine/no-suite-dupes": "off",
    "jasmine/prefer-toHaveBeenCalledWith": "off",
    "jsdoc/require-hyphen-before-param-description": "error",
    "no-magic-numbers": "off",
    "sort-imports": "off"
  }
}
